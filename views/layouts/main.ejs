        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- ----------------------------------------------------- -->
    <title>
        <%= typeof title !='undefined' ? title:'Moja Kuhinja' %>
    </title>
</head>

<body>
    <nav>
        <div class="logo">
            <h1> <a href="/" class="logo-link">Moja <span class="logo-span"> Kuhinjica</span> </a></h1>
            <div class="toggle">
                <ion-icon name="grid-outline" class="ikona-otvori"></ion-icon>
                <ion-icon name="grid" class="ikona-zatvori"></ion-icon>
            </div>
        </div>
        <div class="nav-content">

            <ul class="navigacija">
                <a href="/meni/dorucak">
